# ==============================================
# HOSPITAL MANAGEMENT SYSTEM - FRONTEND CONFIG
# ==============================================

# ==============================================
# API CONFIGURATION
# ==============================================
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_API_VERSION=v1
REACT_APP_API_TIMEOUT=30000

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
REACT_APP_NAME=Hospital Management System
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Comprehensive Hospital Management System

# ==============================================
# ENVIRONMENT CONFIGURATION
# ==============================================
REACT_APP_ENV=development
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=info

# ==============================================
# FEATURE FLAGS
# ==============================================
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_PWA=false
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_OFFLINE_MODE=false

# ==============================================
# UI CONFIGURATION
# ==============================================
REACT_APP_THEME=light
REACT_APP_PRIMARY_COLOR=#2563eb
REACT_APP_SECONDARY_COLOR=#64748b
REACT_APP_DEFAULT_LANGUAGE=en

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt

# ==============================================
# PAGINATION CONFIGURATION
# ==============================================
REACT_APP_DEFAULT_PAGE_SIZE=10
REACT_APP_MAX_PAGE_SIZE=100

# ==============================================
# CACHE CONFIGURATION
# ==============================================
REACT_APP_CACHE_DURATION=300000
REACT_APP_ENABLE_CACHE=true

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
REACT_APP_TOKEN_REFRESH_INTERVAL=300000
REACT_APP_SESSION_TIMEOUT=3600000

# ==============================================
# EXTERNAL SERVICES
# ==============================================
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
REACT_APP_SENTRY_DSN=your-sentry-dsn

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================
REACT_APP_MOCK_API=false
REACT_APP_ENABLE_DEV_TOOLS=true

# ==============================================
# PRODUCTION CONFIGURATION (uncomment for production)
# ==============================================
# REACT_APP_ENV=production
# REACT_APP_DEBUG=false
# REACT_APP_LOG_LEVEL=error
# REACT_APP_ENABLE_ANALYTICS=true
# REACT_APP_ENABLE_PWA=true
